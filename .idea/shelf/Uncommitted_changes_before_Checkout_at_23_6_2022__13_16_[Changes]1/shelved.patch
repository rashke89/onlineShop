+        ShopService.getAdById(params.adId)
+            .then(response => {
+                if (response.status === 200) {
+                    setAd(response.data);
+                }
+
+                if (!response.data) {
+                    setIsParamsAvailable(false)
+                }
+            })
+            .catch(error => {
+
+            })
+            .finally(() => {
+                setIsApiFinished(true);
+            });
+    };
+
+    return (
+        <div className="view-ad-wrapper container">
+            <div className="row">
+                <div className="col-md-12">
+                        {noParamsMsgLayout()}
+                        {ad && ad.hasOwnProperty('id') && adLayout()}
+                </div>
+            </div>
+        </div>
+    )
+}
